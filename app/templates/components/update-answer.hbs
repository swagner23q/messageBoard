{{#if updateAnswerForm}}
  <h4>Update {{model.question.author}}'s {{model.answer.author}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=answer.author}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" placeholder=answer.date}}
        </div>

        <div class="form-group">
          <label for="response">Response</label>
          {{input value=response id="response" placeholder=answer.response}}
        </div>

        <button {{action 'update' answer}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateAnswerForm'}}>Edit</button>
{{/if}}
