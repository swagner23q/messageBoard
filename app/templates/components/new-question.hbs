<div class="questionForm">
  {{#if addNewQuestion}}
    <h1>New Question</h1>
        <form>
          <div class="form-group">
            <label for="subject">Subject</label>
            {{input value=subject id="subject"}}
          </div>

          <div class="form-group">
            <label for="author">Author</label>
            {{input value=author id="author"}}
          </div>

          <div class="form-group">
            <label for="date" >Date</label>
            {{input value=date id="date" type="date"}}
          </div>

          <div class="form-group content">
            <label for="content">Content</label>
              {{input value=content id="content" type="text"}}

          </div>

          <button {{action 'save1'}}>Save</button>
        </form>
  {{else}}
      <button {{action 'questionFormShow'}}>New Question</button>
  {{/if}}
</div>
